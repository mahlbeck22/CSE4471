            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ahlbe.cse4471.EncryptionActivity" />
        </activity>
        <activity
            android:name=".MotionEncryption"
            android:label="MotionEncryption"
            android:parentActivityName=".EncryptionActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ahlbe.cse4471.EncryptionActivity" />
        </activity>
        <activity
            android:name=".MotionDecryption"
            android:label="MotionDecryption"
            android:parentActivityName=".DecryptionActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ahlbe.cse4471.DecryptionActivity" />
        </activity>
        <activity
            android:name=".DecryptionActivity"
            android:label="@string/title_activity_decryption"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ahlbe.cse4471.MainActivity" />
        </activity>
        <activity android:name=".CaesarDecryption" />
        <activity android:name=".ImageDecryption" />
        <activity
            android:name=".CaesarEncryptedText"
            android:label="@string/title_activity_caesar_encrypted_text"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CaesarDecryptedText"
            android:label="@string/title_activity_caesar_decrypted_text"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>