                android:value="com.example.ahlbe.cse4471.EncryptionActivity" />
        </activity>
        <activity
            android:name=".ImageEncryption"
            android:label="ImageEncryption"
            android:parentActivityName=".EncryptionActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ahlbe.cse4471.EncryptionActivity" />
        </activity>
        <activity
            android:name=".ImageEncryptionError"
            android:label="ImageEncryptionError"
