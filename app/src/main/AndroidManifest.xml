        </activity>
        <activity
            android:name=".EncryptionActivity"
            android:label="@string/title_activity_encryption"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ahlbe.cse4471.MainActivity" />
        </activity>
        <activity
            android:name=".CaesarEncryption"
            android:label="@string/title_activity_caesar_encryption"
