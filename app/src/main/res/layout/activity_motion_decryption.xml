<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahlbe.cse4471.MotionDecryption"><![CDATA[
    ... />
    ]]>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Your encrypted messages:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/textMsg"
        android:layout_width="182dp"
        android:layout_height="100dp"
        android:hint="Enter encryption"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/motionbutton"
        android:layout_alignLeft="@+id/motionbutton"
        android:layout_alignStart="@+id/motionbutton" />

    <TextView
        android:id="@+id/encryptedTextTextView"
        android:text="You have no encrypted messages."
        android:gravity="center_horizontal"
        android:layout_width="182dp"
        android:layout_height="120dp"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textMsg"
        android:layout_alignStart="@+id/textMsg"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="182dp"
        android:layout_height="70dp"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Detect Orientation and Decrypt"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="331dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:id="@+id/motionbutton" />

    <TextView
        android:id="@+id/keyOutputTextView"
        android:text="Decrypted text:"
        android:gravity="center_horizontal"
        android:layout_width="182dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/motionbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/motionbutton"
        android:layout_marginBottom="63dp" />

    <TextView
        android:text="None"
        android:gravity="center_horizontal"
        android:layout_width="182dp"
        android:layout_height="50dp"
        android:id="@+id/encryptionOutputTextView"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/keyOutputTextView"
        android:layout_alignStart="@+id/keyOutputTextView" />

</android.widget.RelativeLayout>
